   "source": [
    "A Closures closes the free variable in its environments "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 7,
   "metadata": {},
   "outputs": [],
   "source": [
    "def outer_fun(msg):\n",
    "    message=msg\n",
    "    def inner_fun():\n",
    "        print(message)\n",
    "    return inner_fun\n",
    "\n",
    "hi_fun=outer_fun('Hi')\n",
    "hello_fun=outer_fun('Hello')\n"
   ]
  },
